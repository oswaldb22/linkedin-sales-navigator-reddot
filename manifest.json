{
  "manifest_version": 3,
  "name": "Sales Nav Inbox Follow-up Dot",
  "version": "0.2.0",
  "description": "Shows a red dot on Sales Navigator inbox threads when your last message is unanswered for X days.",
  "icons": {
    "16": "assets/icon_16.png",
    "32": "assets/icon_32.png",
    "48": "assets/icon_48.png",
    "128": "assets/icon_128.png"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://www.linkedin.com/sales/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/sales/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}